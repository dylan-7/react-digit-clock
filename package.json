{
  "name": "react-digital-clock",
  "version": "0.1.0",
  "description": "react-digital-clock is a simple react component used to show digital clock.",
  "main": "lib/react-digital-clock.js",
  "module": "esm/react-digital-clock.js",
  "files": [
    "src",
    "lib",
    "esm"
  ],
  "scripts": {
    "lint": "eslint src/**/* __tests__/**/*",
    "lint-staged": "lint-staged",
    "test": "jest",
    "build": "yarn run build:cjs && yarn run build:esm",
    "build:cjs": "rimraf ./lib && tsc --module commonjs --outDir lib",
    "build:esm": "rimraf ./esm && tsc --module ESNext --outDir esm",
    "build:demo": "webpack --env.prod --config ./demo/webpack.config.js",
    "start:demo": "webpack --config ./demo/webpack.config.js",
    "prepublishOnly": "yarn run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dylan-7/react-digital-clock"
  },
  "keywords": [
    "react",
    "component",
    "react-digit-clock",
    "digit-clock",
    "react-clock",
    "clock",
    "react-component"
  ],
  "author": "dylan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dylan-7/react-digital-clock/issues"
  },
  "homepage": "https://github.com/dylan-7/react-digital-clock",
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@types/jest": "^29.5.3",
    "@types/react": "^18.2.17",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-react": "^7.16.0",
    "file-loader": "^6.2.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.1",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "url-loader": "^4.1.1",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "dayjs": "^1.11.9"
  },
  "peerDependencies": {
    "react": "^0.14.0 || ^15.0.0 || ^16.0.0 || ^17.0.0 || ^18.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.ci.json"
      }
    },
    "setupFilesAfterEnv": [
      "jest-expect"
    ],
    "testRegex": "(/__tests__/.*(test|spec))\\.tsx?$",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/react-digital-clock.*"
    ]
  }
}
